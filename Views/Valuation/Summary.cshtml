@model IEnumerable<ValuationCalculator.Models.ValuationModel>

@{
    ViewData["Title"] = "Summary";
}

<h1>Podsumowanie</h1>

<table class="table caption-top" >
    <thead>
        <tr class="table table-bordered border-warning">
            <th>
                #
            </th>
            <th>
                Wykończenie
            </th>
            <th>
                Kolor
            </th>
            <th>
                Grubość
            </th>
            <th>
                Wysokość
            </th>
            <th>
                Szerokość
            </th>
            <th>
                Cena jednostkowa
            </th>
            <th>
                Ilość
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValuationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thickness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-8"></div>
    <div class="col-4">
        <h5>Wartość końcowa: @Model.Sum(i =>Math.Round(i.FinalPrice * i.Amount)) złotych</h5>
    </div>
</div>
